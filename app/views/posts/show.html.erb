<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>

<h2>
  <%= @post.comments.count %>
  Comments
  <%= render @post.comments %>
</h2>

<h3>Reply to thread
  <%= render "comments/form", comment:Comment.new %>
</h3>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
